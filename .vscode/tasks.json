{
    "tasks": [
        {
            "type": "shell",
            "label": "Post file to the server",
            "command": "curl",
            "args": [
                "-s", "-X", "POST",
                "http://localhost:8080/effect",
                "--data-binary", "@${relativeFile}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "showReuseMessage": false,
                "close": true
            }
        },
        {
            "type": "shell",
            "label": "Post selection to the server",
            "command": "curl",
            "args": [
                "-s", "-X", "POST",
                "http://localhost:8080/effect",
                "--data-binary", "'${selectedText}'"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "showReuseMessage": false,
                "close": true
            }
        }
    ],
    "version": "2.0.0"
}
