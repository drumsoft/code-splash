{
    "tasks": [
        {
            "type": "process",
            "label": "build",
            "command": "swift",
            "args": ["build", "-c", "release"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": {
                "owner": "swift",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "type": "shell",
            "label": "Post file to the server",
            "command": "curl",
            "args": [
                "-s", "-X", "POST",
                "http://localhost:8080/effect",
                "--data-binary", "@${relativeFile}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "showReuseMessage": false,
                "close": true
            }
        },
        {
            "type": "shell",
            "label": "Post selection to the server",
            "command": "curl",
            "args": [
                "-s", "-X", "POST",
                "http://localhost:8080/effect",
                "--data-binary", "'${selectedText}'"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "showReuseMessage": false,
                "close": true
            }
        }
    ],
    "version": "2.0.0"
}
